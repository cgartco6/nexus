    <script>
        // Simple animation for AI grid nodes
        document.addEventListener('DOMContentLoaded', function() {
            const nodes = document.querySelectorAll('.grid-node');
            
            nodes.forEach(node => {
                // Random movement on hover
                node.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.5)';
                    this.style.transition = 'transform 0.3s';
                });
                
                node.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                });
            });
            
            // Create grid lines
            const grid = document.querySelector('.ai-grid');
            const width = grid.offsetWidth;
            const height = grid.offsetHeight;
            
            // Create horizontal lines
            for (let i = 0; i < height; i += 40) {
                const line = document.createElement('div');
                line.className = 'grid-line horizontal-line';
                line.style.top = i + 'px';
                grid.appendChild(line);
            }
            
            // Create vertical lines
            for (let i = 0; i < width; i += 40) {
                const line = document.createElement('div');
                line.className = 'grid-line vertical-line';
                line.style.left = i + 'px';
                grid.appendChild(line);
            }
        });
    </script>
</body>
